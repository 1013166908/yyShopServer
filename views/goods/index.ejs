<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>类别列表</title>
</head>
<body>
<!--The content below is only a placeholder and can be replaced.-->

<link rel="stylesheet" href="/bootstrap/css/bootstrap.css" type="text/css">
<link rel="stylesheet" href="/css/basic.css" type="text/css">



<%- include  ../public/top.ejs  %>

<div class="container-fluid">
    <div class="row">



        <%- include  ../public/left.ejs  %>



        <div class="col-sm-10">
            <ol class="breadcrumb">
                <li class="active">商品管理
                </li>
                <li class="active">商品列表
                </li>
            </ol>
            <div class="panel panel-default">
                <div class="panel-heading">
                    搜索
                </div>
                <div class="panel-body">
                    <form role="form" class="form-inline">
                        <div class="form-group">
                            <label for="name">名称</label>
                            <input type="text" class="form-control" id="name" placeholder="请输入名称">
                        </div>

                        <div class="form-group">
                            <button type="submit" class="btn btn-default">开始搜索</button>
                        </div>
                    </form>
                </div>
            </div>
            <!--
                列表展示            -->
            <div class="table-responsive">
                <table class="table table-striped ">
                    <thead>
                    <tr>
                        <th>编号</th>
                        <th>商品名</th>
                        <th>所属类别</th>
                        <th>图片</th>
                        <th>价格</th>
                        <th>库存</th>
                        <th>状态</th>
                        <th class="text-center">操作</th>
                        <th>描述</th>
                    </tr>
                    </thead>
                    <tbody>

                    <% for( let i in  goods){ %>
                        <tr>
                            <td><%= parseInt(i)+1%></td>
                            <td><%= goods[i].name %></td>
                            <td><%= goods[i].typename%></td>
                            <td>
                                <img src="../<%= goods[i].image %>" alt="暂无图片" width="50px" height="50px">
                            </td>
                            <td><%= goods[i].price %></td>
                            <td><%= goods[i].total %></td>
                            <% if(goods[i].state==1){ %>
                            <td>在售</td>
                            <%} else {%>
                            <td>下架</td>
                            <%}%>
                            <td class="text-center">
                                <% if(goods[i].state==1){ %>
                                    <a href="#">下架</a>
                                <%} else {%>
                                    <a href="#">上架</a>
                                <%}%>
                            </td>
                            <td><%= goods[i].describe %></td>
                        </tr>
                    <%}%>

                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
<script>

</script>
</body>
</html>